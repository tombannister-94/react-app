{
  "name": "react-flask-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "cra-template": "1.0.3",
    "node-sass": "^4.14.1",
    "normalize.css": "^5.0.0",
    "parallelshell": "^3.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build-assets": "yarn run build:css",
    "build:css": "node-sass src/sass/main.scss src/dist/main.css --output dist/ --output-style compressed --source-map true && echo 'CSS built successfully'",
    "build:watch": "parallelshell 'yarn run build:watch:css'",
    "build:watch:css": "watch --interval 0.01 --wait 0.5 'yarn run build:css' src/sass/"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}